{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "jsx": "react-jsx", // ✅ 必须是这个
    "baseUrl": ".",
    "types": ["react", "react - dom", "react - router - dom"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "noEmitOnError": false,  // 允许在存在错误时继续编译
    "noUnusedLocals": false,  // 忽略未使用的变量警告
    "noUnusedParameters": false,  // 忽略未使用的参数警告
    "strict": false,  // 关闭严格模式
  }
}
